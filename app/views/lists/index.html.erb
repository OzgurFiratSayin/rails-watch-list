<div class="navbar">
  <i class="fas fa-film"></i>
  <%= link_to 'New list', new_list_path %>
</div>

<div class="banner">
</div>

<div id="my-list">
  <div id="my-list-top-bar">
    <h2>My Lists</h2>
    <%= link_to 'Create a movie list', new_list_path, :class => "btn btn-success"%>
  </div>
  <div class="container-cards">
    <% @lists.each do |list| %>
        <%= link_to list_path(list) do %>
          <div class="card-list"><%=list.name%></div>
        <% end %>
    <% end %>
  </div>
</div>

